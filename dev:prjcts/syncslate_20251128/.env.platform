# SaaS Platform Core Integration Environment Variables
# Copy these to .env.local when ready to integrate

# ===== Clerk Authentication =====
# Get these from your Platform Core Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Custom sign-in/sign-up URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ===== Platform Core API =====
# Development
PLATFORM_CORE_URL=http://localhost:3000
NEXT_PUBLIC_PLATFORM_CORE_URL=http://localhost:3000

# Production (update when deployed)
# PLATFORM_CORE_URL=https://your-platform-core.vercel.app
# NEXT_PUBLIC_PLATFORM_CORE_URL=https://your-platform-core.vercel.app

# ===== Resource Types for SyncSlate =====
# These will be used for quota checking
RESOURCE_TYPE_VOICE=voice_generation
RESOURCE_TYPE_SYNC=sync_session
RESOURCE_TYPE_STORAGE=storage

# ===== Quota Limits (for local fallback) =====
FREE_TIER_VOICE_LIMIT=10
FREE_TIER_SYNC_LIMIT=5
FREE_TIER_STORAGE_LIMIT=104857600  # 100MB in bytes

# ===== Feature Flags =====
ENABLE_PLATFORM_INTEGRATION=false  # Set to true when ready
ENABLE_QUOTA_CHECK=false          # Set to true to enforce quotas
ENABLE_USAGE_TRACKING=false       # Set to true to track usage

