{
  "name": "autoedit-tate",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered automatic video editing system for SNS content (60 seconds or less)",
  "main": "packages/electron/dist/main.js",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/analysis/*",
    "packages/io/*", 
    "packages/qa/*"
  ],
  "scripts": {
    "dev": "concurrently -k -r \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "cd packages/renderer && npm run dev",
    "dev:electron": "wait-on tcp:3000 && npm run build:packages && cd packages/electron && npm run dev",
    "build": "npm run build:packages && npm run build:electron && npm run build:renderer && npm run pack",
    "build:packages": "npm run build --workspaces --if-present",
    "build:renderer": "cd packages/renderer && npm run build",
    "build:electron": "cd packages/electron && npm run build",
    "start": "cd packages/electron && npm start",
    "pack": "cd packages/electron && npm run pack",
    "dist": "cd packages/electron && npm run dist",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint packages/*/src --ext .ts,.tsx --report-unused-disable-directives",
    "typecheck": "npm run build:packages",
    "clean": "find packages -name 'dist' -type d -exec rm -rf {} + 2>/dev/null || true",
    "install:all": "npm install --workspaces",
    "pr-review:local": "GITHUB_REPOSITORY=ShoheiFukushima/AutoEditTATE node scripts/pr-review-runner.js --local --event tmp/pr-event-local.json",
    "pr-review:local:post": "GITHUB_REPOSITORY=ShoheiFukushima/AutoEditTATE node scripts/pr-review-runner.js --local --event tmp/pr-event-local.json --post",
    "postinstall": "echo 'Installation complete'"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^9.1.0",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "prettier": "^3.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "wait-on": "^8.0.2"
  }
}
