{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AutoEditTATE explain.json schema",
  "type": "object",
  "required": [
    "pattern",
    "subscores",
    "aggregateConfidence",
    "reasons",
    "project_seed",
    "meta"
  ],
  "additionalProperties": false,
  "properties": {
    "pattern": {
      "type": "string",
      "enum": ["dynamic_cut", "narrative_flow", "hybrid_balance"]
    },
    "subscores": {
      "type": "object",
      "required": ["sync", "semantic", "visual", "stability"],
      "additionalProperties": false,
      "properties": {
        "sync": { "type": "number", "minimum": 0, "maximum": 1 },
        "semantic": { "type": "number", "minimum": 0, "maximum": 1 },
        "visual": { "type": "number", "minimum": 0, "maximum": 1 },
        "stability": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "aggregateConfidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "reasons": { "type": "array", "minItems": 5, "items": { "type": "string" } },
    "warnings": { "type": "array", "items": { "type": "string" } },
    "project_seed": { "type": "integer" },
    "meta": {
      "type": "object",
      "required": ["mode", "timestamp"],
      "additionalProperties": false,
      "properties": {
        "mode": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "note": { "type": "string" }
      }
    }
  }
}